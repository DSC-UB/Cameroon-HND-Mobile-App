<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAcivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/image_background01"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/sign_in_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN IN INTO CAMEROON HND APP"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/dimension_20"
            android:layout_marginRight="@dimen/dimension_20"
            android:layout_marginTop="@dimen/dimension_60"
            android:layout_marginBottom="@dimen/dimension_60"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sign_in_id">

            <TextView
                android:id="@+id/dont_have_an_account_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="don't have an account? create one"
                android:textSize="@dimen/dimension_20"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="@dimen/dimension_20"
                />

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>